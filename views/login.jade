extends layout

block content
    #myContent
        .col-sm-6.col-sm-offset-3
            h1
                span.fa.fa-sign-in
                |  Zaloguj
            form(action='/login', method='post')
                -if(errorMessage)
                    .alert.alert-danger !{errorMessage}
                .form-group
                label Login
                input.form-control(type='text', name='username', required)
                .form-group
                label Hasło
                input.form-control(type='password', name='password', required)
                br 
                button.btn.btn-warning.btn-lg(type='submit') Login
            hr
            p
            | Potrzebujesz konta? 
            a(href='/signup') Zarejestruj się

extends layout

block content
    .col-sm-6.col-sm-offset-3
        h1
            span.fa.fa-sign-in
            |  Signup

       
            
        form(action='/signup', method='post')
            -if(errorMessage)
                .alert.alert-danger !{errorMessage}
            .form-group
            label Email
            input.form-control(type='text', name='username', required)
            .form-group
            label Password
            input.form-control(type='password', name='password', required)
            br
            button.btn.btn-warning.btn-lg(type='submit') Signup
        hr
        p
            | Already have an account? 
            a(href='/login') Login
        p
            | Or go 
            a(href='/') home
            | .
